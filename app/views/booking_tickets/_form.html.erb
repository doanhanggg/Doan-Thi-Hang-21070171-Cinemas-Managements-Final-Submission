        <%= form.label :seat_type, class: label_class %>
          <%= form.text_field :seat_type, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :position, class: label_class %>
          <%= form.text_field :position, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :add_popcorn_combo, class: label_class %>
          <%= form.text_field :add_popcorn_combo, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :screen_type, class: label_class %>
          <%= form.text_field :screen_type, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

