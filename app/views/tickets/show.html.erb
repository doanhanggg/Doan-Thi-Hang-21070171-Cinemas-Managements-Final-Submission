<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Ticket</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to tickets_path, class: button_class(theme: "transparent") do %>
      All Tickets
      <% end %>
      <%= link_to edit_ticket_path(@ticket), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name movie:</p>
        <p><%= @ticket.name_movie %></p>
      </li>
      <li>
        <p class="font-semibold">Showtime:</p>
        <p><%= @ticket.showtime %></p>
      </li>
      <li>
        <p class="font-semibold">Screen:</p>
        <p><%= @ticket.screen %></p>
      </li>
      <li>
        <p class="font-semibold">Name cinemas:</p>
        <p><%= @ticket.name_cinemas %></p>
      </li>
      <li>
        <p class="font-semibold">Price ticket:</p>
        <p><%= @ticket.price_ticket %></p>
      </li>
      <li>
        <p class="font-semibold">Seat:</p>
        <p><%= @ticket.seat %></p>
      </li>
  </ul>
</div>
