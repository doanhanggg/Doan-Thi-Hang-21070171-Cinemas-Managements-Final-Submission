<%= form_with(model: ticket) do |form| %>
<% if ticket.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% ticket.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name_movie, class: label_class %>
        <%= form.text_field :name_movie, class: input_class %> 
      </div>
  <div class="mb-6">
        <%= form.label :showtime, class: label_class %>
          <%= form.text_field :showtime, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :screen, class: label_class %>
          <%= form.number_field :screen, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :name_cinemas, class: label_class %>
          <%= form.text_field :name_cinemas, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price_ticket, class: label_class %>
          <%= form.text_field :price_ticket, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :seat, class: label_class %>
          <%= form.text_field :seat, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if ticket.persisted? %>
<%= link_to "Cancel", ticket, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", tickets_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
