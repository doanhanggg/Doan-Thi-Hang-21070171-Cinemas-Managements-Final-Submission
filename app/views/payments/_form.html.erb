        <%= form.label :name_customer, class: label_class %>
          <%= form.text_field :name_customer, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :mobile, class: label_class %>
          <%= form.text_field :mobile, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :gmail, class: label_class %>
          <%= form.text_field :gmail, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :total_cost, class: label_class %>
          <%= form.text_field :total_cost, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :add_voucher, class: label_class %>
          <%= form.text_field :add_voucher, class: input_class %>
